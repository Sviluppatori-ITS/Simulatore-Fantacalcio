{
	"name": "Simulatore Fantacalcio",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-azuretools.vscode-docker",
				"batisteo.vscode-django",
				"esbenp.prettier-vscode", // formatter per JS/TS/JSON
				"dbaeumer.vscode-eslint", // linter per JS/TS
				"ms-azuretools.vscode-docker", // supporto per Docker
				"mhutchie.git-graph", // visualizzazione grafica dei branch Git
				"ms-ceintl.vscode-language-pack-it",
				"ms-python.autopep8",
				"ms-python.flake8",
				"esbenp.prettier-vscode",
				"ms-python.pylint",
				"inferrinizzard.prettier-sql-vscode",
				"donjayamanne.python-extension-pack",
				"batisteo.vscode-django",
				"github.copilot",
				"github.copilot-chat",
				"ecmel.vscode-html-css",
				"george-alisson.html-preview-vscode",
				"sidthesloth.html5-boilerplate",
				"vscode-icons-team.vscode-icons",
				"antfu.vite",
				"burkeholland.simple-react-snippets",
				"mechatroner.rainbow-csv",
				"ms-python.debugpy",
				"postman.postman-for-vscode",
				"swellaby.node-pack",
				"davidanson.vscode-markdownlint",
				"zainchen.json"
			]
		}
	},
	"postCreateCommand": "pip install -r requirements.txt && pip install --upgrade pip setuptools wheel && python manage.py migrate",
	"remoteUser": "vscode",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.13"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20"
		}
	},
	"updateContentCommand": "pip install --upgrade pip setuptools wheel && npm install -g npm@latest"
}
